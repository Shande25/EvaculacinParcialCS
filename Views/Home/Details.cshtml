@model EjemploMVC_MAT.Models.Card

@{
    ViewData["Title"] = "Detalles de la Carta";
}

<h1>@Model.Name</h1>

<img src="@Model.CardImages.FirstOrDefault()?.ImageUrl" alt="@Model.Name" class="card-image" />

<p><strong>Tipo:</strong> @Model.Type</p>
<p><strong>Descripción:</strong> @Model.Desc</p>
<p><strong>Arquetipo:</strong> @Model.Archetype</p>

<h3>Precios:</h3>
<ul>
    <li><strong>eBay:</strong> @Model.CardPrices?.FirstOrDefault()?.EbayPrice</li>
    <li><strong>Amazon:</strong> @Model.CardPrices?.FirstOrDefault()?.AmazonPrice</li>
</ul>

<a href="@Url.Action("Index", "Card")">Volver al listado de cartas</a>
