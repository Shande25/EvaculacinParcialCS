@model List<EjemploMVC_MAT.Models.Card>

@{
    ViewData["Title"] = "Cartas de Blue-Eyes";
}

<h1>Cartas de Blue-Eyes</h1>

<div class="card-list">
    @foreach (var card in Model)
    {
        <div class="card">
            <img src="@card.CardImages.FirstOrDefault()?.ImageUrl" alt="@card.Name" class="card-image" />
            <h2>@card.Name</h2>
            <p><strong>Precio en eBay:</strong> @card.CardPrices?.FirstOrDefault()?.EbayPrice</p>
            <a href="@Url.Action("Details", "Card", new { id = card.Id })">Ver detalles</a>
        </div>
    }
</div>

<div class="pagination">
    <!-- Paginación -->
    <a href="@Url.Action("Index", "Card", new { page = 1 })">Primera</a>
    <a href="@Url.Action("Index", "Card", new { page = 2 })">Página 2</a>
    <!-- Agregar más enlaces según el número de páginas -->
</div>
