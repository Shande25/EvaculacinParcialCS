@model List<EjemploMVC_MAT.Models.Card>

<div class="container">
    <h1>Lista de Cartas</h1>
    <div class="row">
        @foreach (var card in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@card.CardImages?.FirstOrDefault()?.ImageUrl" class="card-img-top" alt="@card.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@card.Name</h5>
                        <p class="card-text">@card.Desc</p>
                        <a href="@Url.Action("Details", "Home", new { id = card.Id })" class="btn btn-primary">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="pagination">
        <ul class="pagination">
            @for (var i = 1; i <= (int)ViewData["TotalPages"]; i++)
            {
                <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Home", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </div>
</div>
